<!-- Button to submit item or outfit -->

<div class="submit-button nav-item d-flex align-items-center justify-content-center position-fixed start-50 translate-middle-x">

  <button type="button" class="btn btn-secondary rounded-circle btn-lg position-fixed" data-bs-toggle="modal" data-bs-target="#chooseSubmit">
  +
  </button>

</div>

<!-- Button trigger modal -->



<div class="navbar py-0 navbar-expand-sm navbar-light navbar-lewagon fixed-top d-flex justify-content-center flex-column ">
  <div class="px-2 py-2 d-flex justify-content-between w-100">

      <%= link_to root_path, class: "navbar-brand d-flex align-items-center justify-content-start" do %>
        <h2 class="mt-2">Refresh</h2>
      <% end %>


        <% if user_signed_in? %> <!-- Logged in -->

          <div class="nav-item d-flex align-items-center justify-content-end">

          <div class="container">

            <div class="row d-flex justify-content-center align-items-center">

              <div class="col-4 d-flex justify-content-center align-items-center">

                <%= link_to chatrooms_path do %>
                  <h5 class="m-0 p-0"><i class="far fa-envelope"></i></h5>
                <% end %>

              </div>

              <div class="col-4 d-flex justify-content-center align-items-center">

                <%= link_to trades_path do %>
                  <h5 class="m-0 p-0"><i class="fas fa-exchange-alt"></i></h5>
                <% end %>

              </div>

              <div class="col-4 d-flex justify-content-center align-items-center">

                <% if current_user.photo.key.nil? %> <!-- User doesn't have an avatar -->

                  <%= link_to dashboard_path do %>
                    <%= cl_image_tag "v1646064199/non_existing_id.png", class: "avatar" %>
                  <% end %>

                <% else %> <!-- User has an avatar -->

                  <%= link_to dashboard_path(current_user) do %>
                    <%= cl_image_tag current_user.photo.key , class: "avatar" %>
                  <% end %>

                <% end %>

              </div>

            </div>

          </div>

          </div>

        <% else %> <!-- Not logged in -->

          <div class="nav-item d-flex align-items-center justify-content-center">
            <%= link_to "Login", new_user_session_path, class: "btn btn-action" %>
          </div>

        <% end %>
  </div>
</div>

<!-- Modal -->
<div class="modal fade scale" id="chooseSubmit" tabindex="-1" aria-labelledby="chooseSubmitLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content bg-white align-items-center position-relative">

      <p class="py-2 refresh-badge rounded-pill position-absolute">Add your style</h2>

      <div class="row px-3 py-5">
        <div class="col-6 d-flex align-items-center justify-content-center">
            <%= link_to new_item_path, class: "btn btn-primary rounded-circle", method: :get  do %>
              <div class="choose-card">
                <h2><i class="fas fa-tshirt"></i></h2>
                <h3>Item</h3>
              </div>
            <% end %>
        </div>
        <div class="col-6 d-flex align-items-center justify-content-center">
            <%= link_to new_outfit_path, class: "btn btn-primary rounded-circle", method: :get  do %>
                <div class="choose-card">
                  <h2><i class="fas fa-child"></i></h2>
                  <h3>Outfit</h3>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="navbar navbar-expand-sm navbar-light navbar-lewagon sticky-top grid">
  <div class="container">

      <%= link_to root_path, class: "navbar-brand d-flex align-items-center justify-content-start g-col-4" do %>
        <h2 class="m-0">Refresh</h2>
      <% end %>


        <% if user_signed_in? %>

          <div class="g-col-4 nav-item d-flex align-items-center justify-content-center position-absolute top-50 start-50 translate-middle">
            <%= link_to "+", "#", class: "btn btn-success rounded-circle" %>
          </div>

          <div class="g-col-4 nav-item d-flex align-items-center justify-content-end">
            <%# link_to "nickname", "#" , class: "pe-2"%>
            <% if current_user.photo.key.nil? %>
              <%= link_to "#" do %>
                <%= cl_image_tag "v1646064199/non_existing_id.png", class: "avatar" %>
              <% end %>
            <% else %>
              <%= link_to "#" do %>
                <%= cl_image_tag current_user.photo.key , class: "avatar" %>
              <% end %>
            <% end %>
          </div>
        <% else %>
          <div class="g-col-8 nav-item d-flex align-items-center justify-content-center">
            <%= link_to "Login", new_user_session_path, class: "btn btn-success" %>
          </div>

        <% end %>
  </div>
</div>

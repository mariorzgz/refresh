<div class="container mt-4 p-0 ">

  <div class="row mx-auto d-flex justify-content-center gx-4">

    <div class="col-lg-5 col-md-6 col-sm-12">

        <h2 class="mb-4"><i class="fas fa-bolt me-3"></i>Trending outfits now</h2>

        <div class="row mb-5">

          <% @outfits.each do |outfit| %>
            <%= render "shared/outfit_card", outfit: outfit %>
          <% end %>

        </div>

      </div>



    <div class="col-lg-3 col-md-5 d-none d-sm-block" >

      <div class="container sticky-top py-3">

        <h5 class="mb-3">People you may like</h5>
        <ul class="list-group pb-3">
        <% @users.each do |user| %>

          <li class="list-group-item border-0"><%= cl_image_tag user.photo.key, class: "avatar me-2" %><%= user.nickname %></li>

        <% end %>
        </ul>

        <small class="text-muted">Refresh was created with love by Yigit, Christina and Mario. </small>
      </div>

    </div>

  </div>

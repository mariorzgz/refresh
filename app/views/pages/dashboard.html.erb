<div class="container">
  <div class="user-info" >
    <%= cl_image_tag @user.photo.key, class: "avatar-large" %>
    <p><%= @user.nickname %></p>
  </div>
  <div>
    <h3 class="dashboard-title mt-4">Your dashboard</h3>
    <ul class="nav nav-pills mt-4" id="myTab" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">Outfits</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">Items</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">Trades</button>
      </li>
    </ul>
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active my-4" id="home" role="tabpanel" aria-labelledby="home-tab">
        <div class="row">
          <div class="col-xl-6 col-lg-8 col-md-12" style="margin-bottom: 350px">
          <% if @outfits.empty? %>
              <div class="m-3" style="height: 75vh">
                <p >You don't have any outfits yet.</p>
                <%= link_to "Create your first outfit", new_outfit_path, class: "btn btn-outline-info pill" %>
              </div>
          <% else %>
          <div class="row">
            <% @outfits.each do |outfit| %>
              <div class="col-4">
                <div style="height:200px; background-image:url(<%= cl_image_path outfit.photo.key %>); background-size: cover"></div>
              </div>
            <% end %>
          </div>
          <% end %>
          </div>
        </div>
      </div>
      <div class="tab-pane fade my-4" id="profile" role="tabpanel" aria-labelledby="profile-tab">
        <div class="row">
          <div class="col-xl-6 col-lg-8 col-md-12" style="margin-bottom: 350px">
            <% if @items.empty? %>
              <div>
                <p class="m-3">You don't have any items yet</p>
                <%= link_to "Create your first item", new_item_path, class: "btn btn-outline-info pill" %>
              </div>
            <% else %>
              <div class="row">
                <% @items.each do |item| %>
                  <div class="col-4">
                    <div style="height:200px; background-image:url(<%= cl_image_path item.photo.key %>); background-size: cover"></div>
              </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="tab-pane fade my-4" id="contact" role="tabpanel" aria-labelledby="contact-tab">
        <% if @user.orders.empty? %>
          <div class="m-3" style="height: 75vh">
            <p >You don't have any tradings yet</p>
            <%= link_to "Get inspiration", root_path, class: "btn btn-outline-info pill" %>
          </div>
        <% else %>
          <div class="row">
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">

  <div class="d-flex justify-content-between">
    <div class="user-info" >
      <%= cl_image_tag @user.photo.key, class: "avatar-large" %>
      <p><%= @user.nickname %></p>
    </div>

    <div>
      <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
    </div>
  </div>

  <div>
    <h3 class="dashboard-title mt-4">Your dashboard</h3>
    <ul class="nav nav-pills mt-4" id="myTab" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="outfits-tab" data-bs-toggle="tab" data-bs-target="#outfits" type="button" role="tab" aria-controls="outfits" aria-selected="true">
        Outfits
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="items-tab" data-bs-toggle="tab" data-bs-target="#items" type="button" role="tab" aria-controls="items" aria-selected="false">
        Items
        </button>
      </li>

    </ul>


    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active my-4" id="outfits" role="tabpanel" aria-labelledby="outfits-tab">
        <div class="row">
          <div class="col-xl-6 col-lg-8 col-md-12" style="margin-bottom: 350px">
          <% if @outfits.empty? %>
              <div class="m-3" style="height: 75vh">
                <p >You don't have any outfits yet.</p>
                <%= link_to "Create your first outfit", new_outfit_path, class: "btn btn-outline-info pill" %>
              </div>
          <% else %>
          <div class="row">
            <% @outfits.each do |outfit| %>
              <div class="col-4">
                <%= link_to outfit_path(outfit) do %>
                  <div style="height:200px; background-image:url(<%= cl_image_path outfit.photo.key %>); background-size: cover">
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
          <% end %>
          </div>
        </div>
      </div>

      <div class="tab-pane fade my-4" id="items" role="tabpanel" aria-labelledby="items-tab">
        <div class="row">
          <div class="col-xl-6 col-lg-8 col-md-12" style="margin-bottom: 350px">
            <% if @items.empty? %>
              <div>
                <p class="m-3">You don't have any items yet</p>
                <%= link_to "Create your first item", new_item_path, class: "btn btn-outline-info pill" %>
              </div>
            <% else %>
              <div class="row">
                <% @items.each do |item| %>

                    <div class="col-4">
                      <%= link_to item_path(item) do %>
                        <div style="height:200px; background-image:url(<%= cl_image_path item.photo.key %>); background-size: cover">
                        </div>
                        <p><%= item.name %></p>
                      <% end %>
                    </div>

                <% end %>
            <% end %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

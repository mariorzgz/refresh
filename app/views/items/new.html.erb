<h1>Create Item</h1>

<%= simple_form_for @item do |f| %>
  <%= f.input :name, label: 'Your item name', error: 'item name is mandatory, please specify one' %>
  <%= f.input :description %>
  <%= f.input :brand %>
  <%= f.input :size %>
  <%= f.input :color %>
  <%= f.input :photo, as: :file %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
